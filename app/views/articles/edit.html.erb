<%= form_for @article do |f|%>
	<%= f.label :title%>
	<%= f.text_field :title %>
	<br/>
	<%= f.label :content%>
	<%= f.text_area :content,cols:20,rows:10%>
	<br/>
	<%= f.label :status%>
	<%= f.radio_button :status,"Dirilis"%>
	<%= label :article_status,"Dirilis"%>
	<%= f.radio_button :status,"Belum Dirilis"%>
	<%= label :article_status,"Belum Dirilis"%>
	<br/>
	<%= f.submit :submit%>
<% end %>

<div>
	<%=link_to "back_to_index",article_path%>
</div>