  <div class="card bg-light">
    <div class="card-body text-center">
		<h3><i><%= article.title %></i></h3>
		<p><%= article.content.truncate(20) %></p>
		<%= link_to 'read more',article_path(article.id),class:"btn btn-info"%>
		<span><%= link_to 'edit',edit_article_path(article.id),class:"btn btn-info" %></span>
		<span><%= link_to 'delete',article_path(article.id),method: "DELETE",data:{confirm:'Delete this data ?'},class:"btn btn-info"%></span>
		<p><i>status : <%= article.status%></i></p>
		<hr/>
	</div>
  </div>