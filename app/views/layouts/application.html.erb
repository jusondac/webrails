<!DOCTYPE html>
<html>
  <head>
    <title>Website</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav class="navbar navbar-expand-md bg-dark navbar-dark">
    <a class="navbar-brand" href="#">DepKa</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <%= link_to 'article',articles_path, :class => 'nav-link'%>
        </li>
        <li class="nav-item">
          <%= link_to 'contacts',contacts_path, :class => 'nav-link'%>
        </li>
        <% if !current_user %> 
          <li class="nav-item">
          <%= link_to 'Login',new_session_path,:class => 'nav-link'%>
          </li>
          <li class="nav-item">
          <%= link_to 'Signup',sign_up_path,:class=>'nav-link'%>
          </li>
        <% else %>
          <li class="nav-item">
            <a href="#" class="nav-link"><%= current_user.username %></a>
          </li><li>
          <%= link_to 'Log-Out',session_path(current_user.id),method: "DELETE",:class=>'nav-link'%>
          </li>
        <% end %>
      </ul>
    </div>  
  </nav>
  <%= yield %>
  </body>
</html>
